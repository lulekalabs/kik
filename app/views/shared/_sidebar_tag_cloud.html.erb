<%
  collection_method_name ||= nil
%>
<h2>Stichworte:</h2>
<% tag_cloud(@tags, %w(t4 t5 t6 t7 t8 t9 t10 t11 t12)) do |tag, css| %>
  <span class="<%= css %>">
  <% unless collection_method_name %>  
    <%= link_to h(tag.name), url_for(:tags => tag.name), :class => "white_none" %>
  <% else %>
    <%= link_to h(tag.name), send(collection_method_name, {:tags => tag.name}),
         :class => "white_none" %>
  <% end %>
  </span>
<% end %>
<div class="clearer"></div>

