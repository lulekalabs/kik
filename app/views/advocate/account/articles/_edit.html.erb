<%
  dom_id ||= dom_id(@article, :edit)
%>
<div id="<%= dom_id %>">
  <h2>Artikel bearbeiten</h2> 
  <%= error_messages_for :artikel %>
  <% form_for(:article, @article, :url => formatted_advocate_account_article_path(@article, :format => 'js'), 
    :html => {:method => :put, :multipart => true, :target => dom_id(@article, :upload_frame)}) do |f| %>
    <%= render :partial => "form", :locals => {:f =>f, 
      :cancel_js => "$('##{dom_id}').hide(); $('##{dom_id(@article)}').show();"} %>
  <% end %>
  <iframe id="<%= dom_id(@article, :upload_frame)%>" name="<%= dom_id(@article, :upload_frame)%>" style="width:1px;height:1px;border:0px" src="about:blank"></iframe>
  <%= render :partial => 'shared/default_fields_js' %>
</div>