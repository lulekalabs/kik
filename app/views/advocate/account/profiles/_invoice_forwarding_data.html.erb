<%
  edit ||= !defined?(:edit) && defined?(:f)
%>
<ul class="profil">
  
  <li><span class="one">Versandart</span><span class="two">
    <% if edit %>
      <%= f.select :preferred_billing_method, collect_billing_method_for_select, {},
        {:class => "option_f_h_edit", :style => "background-color:#fffef7 "} %>
    <% else %>
      <%= h(@person.preferred_billing_method_name)%>
    <% end %>
  </span></li>
  
</ul>
